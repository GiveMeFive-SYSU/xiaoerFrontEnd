/* businessRegister.wxss */
page{
  height: 100%;
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 15pt;
  font-weight: bold;
}

.container{
  height: 100%;
  width: 100%;
  background: #EFEFEF;
}
.item-view{
  position: relative;
  margin-bottom: 150rpx;
  display: flex;
  flex-direction: row;
}
.input-title{
  width:30%;
  font-size: 15pt;
  font-weight: bold;
}

.input-view{
  padding: 2px;
  background: white;
  border-radius: 8px;
  width: 100%;
}
.input-view-phone{
  padding: 2px;
  border-radius: 8px;
  width: 38%;
  background: white;
  margin-right: 2%;
}

.bottom-button{
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.submit-button{
  width: 100%;
  background: #FF9E01;
  color:white;
}

.weui-input{
  font-family: Microsoft YaHei;
}

.yanzhengma{
  color: #FF9E01;
}

.warn{
  color: red;
}

