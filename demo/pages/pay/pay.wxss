page{
  height: 100%;
}
.list-content {
  left: 0px;
  width: 100%;
  height: 100%;
  top: 0px;
  padding: 0 18px;
  position: relative;
  box-sizing: border-box;
  border-bottom: 20rpx solid #ededed;
}

.list-content .shopcart-food {
  position: relative;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(7,17,27,0.1);
}

.list-content .shopcart-food .name {
  line-height: 24px;
  font-size: 12px;
  color: rgb(7, 17, 27);
}

.list-content .shopcart-food .price {
  position: absolute;
  right: 20px;
  bottom: 0px;
  line-height: 24px;
  font-size: 12px;
  color: black;
}
.list-content .shopcart-food .count {
  position: absolute;
  right: 70px;
  bottom: 0px;
  line-height: 24px;
  font-size: 12px;
  color: black;
}

.pay-button{
  font-size: 14px;
  color: #FF9E01;
}

.total{
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}

.beizhu-view{
  margin-top: 20px;
  margin-bottom: 20px;
  width: 90%;
  margin-left: 5%;
}

.beizhu{
  padding: 2px;
  border-radius: 4px;
  font-size: 28rpx;
  width:100%;
  height: 100%;
  border: 1px solid #FF9E01;
}