<!--pages/updatecard/updatecard.wxml-->
<view class="showCard">
{{bankcard}}
  <view class="change-button" bindtap="changeCard">
    更换银行卡
  </view>
  <view class="newCard" wx:if="{{pressed}}">
    <input class="num" bindinput="createSpace" placeholder="请输入卡号" name='newcardnumber'></input>
    <input bindinput="inputname" placeholder="请输入持卡人姓名"></input>
    <view class="submit" bindtap="submit">确认</view>
  </view>
  <toast duration="2000" hidden="{{toastHidden}}" bindchange="toastBindChange">{{message}}</toast> 
</view>
